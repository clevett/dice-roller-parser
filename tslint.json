{
  "extends": ["tslint:recommended"],
  "rules": {
    "curly": {
      "options": "ignore-same-line"
    },
    "max-line-length": false,
    "member-ordering": {
      "options": {
        "order": "fields-first"
      }
    },
    "comment-format": [false, "check-space"],
    "no-duplicate-variable": true,
    "no-inferrable-types": true,
    "no-console": [false, "log", "info", "trace", "debug", "time", "timeEnd"],
    "variable-name": {
      "options": [
        "ban-keywords",
        "check-format",
        "allow-leading-underscore",
        "allow-pascal-case"
      ]
    }
  },
  "linterOptions": {
    "exclude": ["dist"]
  }
}
